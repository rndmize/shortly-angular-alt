<!-------------------- navigation bar -------------------->
<div class='navigation'>
<ul>
  <li><a href='#' class='index'>All Links</a></li>
  <li><a href='#' class='create'>Shorten</a></li>
</ul>
  <a href='/logout' class='logout'>Logout</a>
</div>
<div id='container'></div>


<!-------------------- links view -------------------->


<div ng-controller="linkController">
  <div class="link" ng-repeat="link in links">
    <img src='/redirect_icon.png'/>
    <div class='info'>
      <div class='visits'><span class='count'>{{link.visits}}</span>Visits</div>
      <div class='title'>{{link.title}}</div>
      <div class='original'>{{link.url}}</div>
      <a href='{{link.base_url}}/{{link.code}}'>{{link.base_url}}/{{link.code}}</a>
    </div>
  </div>

  <form ng-submit="addLink()">
      <input class='text' type='text' name='url' ng-model="linkText" placeholder="enter url here">
      <input type='submit' value='Shorten'>
  </form>
</div>
